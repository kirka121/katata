<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span3">
		<h3> 
			<%= gravatar_for @user %>
		</h3>
		<h5><%= @user.name %></h5><br />
		<%= @user.email %><br />
		<%= pluralize(@user.microposts.count, "post") %>
	</aside>
	<div class="span9">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<%= will_paginate @microposts %>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>
