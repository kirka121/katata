<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Katata", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "Help", help_path %></li>
					<% if !signed_in? %>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Offline<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Login", signin_path %></li>
								<li><%= link_to "Register", signup_path %></li>
							</ul>
						</li>
					<% elsif signed_in? %>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= capitalize current_user.name %> - Online<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "My Account", current_user %></li>
								<li><%= link_to "Settings", '#' %></li>
								<li><%= link_to "Users", '#' %></li>
								<li><%= link_to "Logout", signout_path, method: "delete" %></li>
							</ul>
						</li>
					<% else %>
						<li>trouble is present</li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>