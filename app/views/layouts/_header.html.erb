<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			
			<nav>
			<div class="logo_container">
				<%= link_to image_tag("katata_logo.png", width: 40, height: 40), root_path, id: "logo" %>
				<div id="text_for_logo">
					<%= link_to "Katata Network", root_path, id: "logo" %>
				</div>
			</div>
				<ul class="nav pull-right">
					<li><%= link_to "About", about_path %></li>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Media<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Books", '#' %></li>
							<li><%= link_to "Movies", '#' %></li>
							<li><%= link_to "Music", '#' %></li>
							<li><%= link_to "Pictures", '#' %></li>
							<li><%= link_to "Quotations", '#' %></li>
							<li><%= link_to "Projects", '#' %></li>
							<li><%= link_to "Ideas", '#' %></li>
						</ul>
					</li>
					<% if !signed_in? %>
					<!-- user logged OUT -->
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Controls<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Register", signup_path %></li>
								<li><%= link_to "Login", signin_path %></li>
								<li><%= link_to "Forgot Password?", '#' %></li>
							</ul>
						</li>
					<% elsif signed_in? %>
					<!-- user logged IN -->
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= capitalize current_user.name %> - Online<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "My Account", current_user %></li>
								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
								<li><%= link_to "Add Media", '#' %> </li>
								<li><%= link_to "Users", users_path %></li>
								<li><%= link_to "Logout", signout_path, method: "delete" %></li>
							</ul>
						</li>
					<% else %>
						<li>trouble is present</li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>